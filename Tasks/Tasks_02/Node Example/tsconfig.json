{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "baseUrl": "."
    },
    "include": ["./**/*.ts"],
    "exclude": [
        "./tests/",
        "./node_modules/",
        "./dist/"
    ]
}